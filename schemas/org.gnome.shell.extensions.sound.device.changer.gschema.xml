<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <enum id="org.gnome.shell.extensions.sound.device.changer.mode">
    <value value="0" nick="List"/>
    <value value="1" nick="Duo"/>
  </enum>
  
  <schema id="org.gnome.shell.extensions.sound.device.changer" path="/org/gnome/shell/extensions/sound/device/changer/">
    <key name="mode"
      enum="org.gnome.shell.extensions.sound.device.changer.mode">
      <default>'List'</default>
      <summary>Mode of sound device changer</summary>
      <description>Allows to switch between list and duo-toggle modes</description>
    </key>
    <key name="device-a" type="s">
      <default>'None'</default>
      <summary>Duo Toggle mode first device</summary>
      <description>Set the first device to toggle between in Duo mode</description>
    </key>
    <key name="device-b" type="s">
      <default>'None'</default>
      <summary>Duo Toggle mode second device</summary>
      <description>Set the second device to toggle between in Duo mode</description>
    </key>
  </schema>
</schemalist>